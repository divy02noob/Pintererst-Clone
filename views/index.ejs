<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-700 flex items-center justify-center">
  <div class="w-[25vw] h-[60vh] bg-white px-20 py-10 rounded-[30px]">
    <h1 class="text-3xl text-center font-semibold text-zinc-700 leading-none tracking-tighter capitalize">Welcome to Pinterest</h1>
    <form action="/login" method="post">
      <input class="block border-2 rounded-[10px] mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="block border-2 rounded-[10px] mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      
      <a class="mt-2 inline-block text-sm text-zinc-500" href="#">Forgot Password?</a>
      <input class="block border-2 rounded-full mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">  
      <p class="text-xs mt-2 text-zinc-600 mt-3  w-7/8 mx-auto text-center">By continuing, you agree to Pinterest's
      <b>Terms of Service</b>
      and acknowledge you've read our
      <b>Privacy Policy
      .
      Notice at collection
      .</b></p>
    </form>
    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't have an account?</a>
  </div>
</div>
